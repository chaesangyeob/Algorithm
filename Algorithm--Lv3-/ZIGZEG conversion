var convert = function(s, numRows) {
  const result = [];
  let step =0;
  let str ='';
  let index =0;

  for(let i =0; i<s.length; i++) {
      if(result[index] ==undefined) {
          result[index] =''
      }
      result[index] += s[i];
      if(index === numRows -1) {
          step = -1
      } else if(index ===0) {
          step = 1
      }
      index +=step
  }
  console.log(result.join(''))
  return result.join('')
};


convert('PAYPALISHIRING',4)
    </script>
